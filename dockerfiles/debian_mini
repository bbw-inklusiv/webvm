FROM --platform=i386 i386/debian:buster
ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get clean && apt-get update && apt-get -y upgrade
RUN apt-get -y install apt-utils gcc \
	python3 vim unzip ruby nodejs \
	fakeroot dbus base whiptail hexedit \
	patch wamerican ucf manpages \
	file luajit make lua50 dialog curl \
	less cowsay netcat-openbsd nano tree sudo
RUN useradd -m teilnehmender && echo "teilnehmender:password" | chpasswd
COPY --chown=teilnehmender:teilnehmender ./examples /home/user/examples
RUN usermod -aG sudo teilnehmender
RUN chmod -R +x  /home/user/examples/lua
RUN mv /usr/bin/sudo /usr/bin/sudo.old
RUN echo "alias sudo='sudo.old -S $1'" > /home/teilnehmender/.bash_aliases
# We set WORKDIR, as this gets extracted by Webvm to be used as the cwd. This is optional.
WORKDIR /home/teilnehmender/
# We set env, as this gets extracted by Webvm. This is optional.
ENV HOME="/home/teilnehmender" TERM="xterm" USER="teilnehmender" SHELL="/bin/bash" EDITOR="vim" LANG="en_US.UTF-8" LC_ALL="C"
RUN echo 'root:password' | chpasswd
CMD [ "/bin/bash" ]
